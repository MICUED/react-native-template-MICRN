{
    "env": {
        "es6": true
    },
    "extends": [
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",    
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": [0, {"ignore": "ignore"}],
        "react/display-name": [0, { "ignoreTranspilerName": true }],
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}